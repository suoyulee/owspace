<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color_black">
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/right_slide_close"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:scaleType="center"
            android:src="@drawable/fork"/>
        <ImageView
            android:id="@+id/search"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:scaleType="center"
            android:src="@drawable/search_white"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/logo_iv"
        android:layout_below="@id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp15"
        android:scaleType="centerCrop"
        android:src="@drawable/weread_horizontal" />

    <RelativeLayout
        android:id="@+id/title_logo_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_iv"
        android:layout_marginTop="@dimen/dp38">

        <View
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp5"
            android:layout_centerVertical="true"
            android:background="@color/split_line" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/weread_signature" />

        <View
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/split_line" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/column_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_logo_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp60"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_page_tv"
            style="@style/MenuColunmStyle"
            android:text="首   页" />

        <TextView
            android:id="@+id/words_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="@dimen/dp18"
            android:text="文   字" />

        <TextView
            android:id="@+id/voice_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="@dimen/dp18"
            android:text="声   音" />

        <TextView
            android:id="@+id/video_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="@dimen/dp18"
            android:text="影   像" />

        <TextView
            android:id="@+id/calendar_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="@dimen/dp18"
            android:text="单向历" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/column_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp50"
        android:text="@string/powered_by_owspace"
        android:textColor="@color/tip_color"
        android:textSize="@dimen/sp7" />


</RelativeLayout>
